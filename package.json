{
  "name": "focushub-backend",
  "version": "1.0.0",
  "description": "Welcome to the backend for **TimeTrackr**, a gamified time-tracking application inspired by indiaction.club. This monolith powers features like time tracking, activity overviews, badge awards, timelines, project management (public/private), leaderboards, and user profiles. Built for rapid development, it integrates seamlessly with a **React + Vite** frontend, using **Express** for simplicity and familiarity.",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/swarnendu19/focushub-backend.git",
  "scripts": {
    "start": "bun run build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development bun --watch src/index.ts",
    "test": "docker-compose -f docker-compose.only-db-test.yml up -d && bun run db:push && bun test -i --colors --verbose --detectOpenHandles && docker-compose -f docker-compose.only-db-test.yml down",
    "test:watch": "docker-compose -f docker-compose.only-db-test.yml up -d && bun run db:push && bun test -i --watchAll && docker-compose -f docker-compose.only-db-test.yml down",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check \"**/*.ts\"",
    "prettier:fix": "prettier --write \"**/*.ts\"",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker:dev-db:start": "docker-compose -f docker-compose.only-db-dev.yml up -d",
    "docker:dev-db:stop": "docker-compose -f docker-compose.only-db-dev.yml down",
    "prepare": "husky install",
    "build": "rimraf build && tsc -p tsconfig.json"
  },
  "keywords": [],
  "author": "Swarnendu Maity",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "joi": "^17.13.3",
    "js-base64": "^3.7.7",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.2",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^6.0.5",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^6.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.11",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xss-filters": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "supertest": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
